<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadingStateRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480px">

        <ProgressBar
            android:id="@+id/progress1"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:indeterminateDrawable="@drawable/progress_gear_fu" />

        <ProgressBar
            android:id="@+id/progress2"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_below="@+id/progress1"
            android:layout_toLeftOf="@+id/progress1"
            android:layout_toStartOf="@+id/progress1"
            android:indeterminateDrawable="@drawable/progress_gear_fu" />

        <ProgressBar
            android:id="@+id/progress3"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_below="@+id/progress1"
            android:layout_toEndOf="@+id/progress1"
            android:layout_toRightOf="@+id/progress1"
            android:indeterminateDrawable="@drawable/progress_gear_fu" />

        <ProgressBar
            android:id="@+id/progress4"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_alignLeft="@+id/progress1"
            android:layout_alignStart="@+id/progress1"
            android:layout_below="@+id/progress2"
            android:indeterminateDrawable="@drawable/progress_gear_fu" />
    </RelativeLayout>
</RelativeLayout>