<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="110px">

    <RelativeLayout
        android:id="@+id/ll_left"
        android:layout_width="110px"
        android:layout_height="110px"
        android:background="@drawable/abc_item_background_holo_light">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_arrow_back_white_24dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_right"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_alignParentRight="true"
        android:background="@drawable/abc_item_background_holo_light">

        <TextView
            android:id="@+id/tv_right_first"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_delete_white_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_right_second"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_toLeftOf="@id/ll_right"
        android:background="@drawable/abc_item_background_holo_light">

        <TextView
            android:id="@+id/tv_right_second"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_mode_edit_white_24dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="hello"
        android:textColor="#fff"
        android:textSize="36px" />

    <TextView
        android:id="@+id/tv_left_title"
        android:layout_width="wrap_content"
        android:layout_height="110px"
        android:layout_marginLeft="110px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:maxWidth="438px"
        android:text="hello"
        android:textColor="#fff"
        android:textSize="36px"
        android:visibility="visible" />


</RelativeLayout>


