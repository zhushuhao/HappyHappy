<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <!-- Customize your theme here. -->
    </style>
    <!--夜间白天模式-->
    <style name="AppThemeDay" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDay</item>
        <item name="colorAccent">@color/colorAccentDay</item>
    </style>

    <style name="AppThemeDay.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeNight" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">32px</item>
    </style>


    <!--首页radiobutton  自定义效果-->
    <style name="RadioButtonBottomTab">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90px</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24px</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#fff</item>
    </style>
    <!--<style name="MyCustomTabTextAppearance">-->
    <!--<item name="android:textSize">30px</item>-->
    <!--<item name="android:textColor">#fff</item>-->
    <!--<item name="textAllCaps">true</item>-->
    <!--</style>-->

    <style name="pop_bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_bottom_in_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_out_anim</item>
    </style>
</resources>
